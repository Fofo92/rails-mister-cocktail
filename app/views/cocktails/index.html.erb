
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path 'https://res.cloudinary.com/fofo921/image/upload/v1608057706/y4pmsiqdsgfhv6nqov8z.jpg' %>')">
  <div class="container">
    <h1>My best cocktails to <strong>creative people</strong>!</h1>
    <p>Change your life by coding and harvesting new skills.</p>
    <p></p>
    <%= link_to 'Add a new cocktail', new_cocktail_path, class: 'btn btn-gradient' %>
  </div>
</div>
<div class="flex-container">
  <% @cocktails.each do |cocktail| %>
    <div class="flex-item">
      <% if cocktail.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
          url('<%= cl_image_path cocktail.photo.key, height: 150, width: 200, crop: :fill %>')">
      <% else %>
        <div class="card-category" style= "background-image: height: 150, width: 200">
      <% end %>
      <%= cocktail.name %>
      </div>
      <div style="text-align: center">
        <%= link_to 'See more', cocktail_path(cocktail), class: 'btn btn-gradient btn-sm'%>
        <% if !cocktail.photo.attached? %>
          <%= link_to 'Add a picture', edit_cocktail_path(cocktail), class: 'btn btn-gradient btn-sm' %>
        <% else %>
          <%= link_to 'Change picture', edit_cocktail_path(cocktail), class: 'btn btn-gradient btn-sm' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    This footer is made with <i class="fas fa-heart"></i> at Le Wagon
  </div>
</div>
