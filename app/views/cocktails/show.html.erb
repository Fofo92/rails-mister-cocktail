<h1><%= @cocktail.name %></h1>
<ul class = 'list-group'>
  <% @cocktail.doses.each do |dose| %>
    <li class='list-group-item'>
      <%= dose.description %>
      <%= dose.ingredient.name %>
    </li>
  <% end %>
</ul>
<%= link_to 'Back to list', cocktails_path %>
<%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
